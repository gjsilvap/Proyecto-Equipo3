    private void botonconproductoActionPerformed(java.awt.event.ActionEvent evt) {                                                 
            this.nombreprod.setEnabled(false);
            this.precioprod.setEnabled(false);
            this.cantprod.setEnabled(false);
            this.fechafac.setEnabled(true);
            this.codigoprod.setEnabled(true);
            this.serviciofac.setEnabled(false);
            this.costofac.setEnabled(false);
    }                                                

    private void botonsinproductoActionPerformed(java.awt.event.ActionEvent evt) {                                                 
            this.nombreprod.setEnabled(false);
            this.codigoprod.setEnabled(false);
            this.precioprod.setEnabled(false);
            this.cantprod.setEnabled(false);
            this.serviciofac.setEnabled(true);
            this.costofac.setEnabled(true);
            this.fechafac.setEnabled(true);
            this.serviciofac.setEnabled(true);
            this.costofac.setEnabled(true);
            this.nombreprod.setText("");
            this.precioprod.setText("0");
            this.cantprod.setText("");
            this.codigoprod.setText("");
    }                                                

