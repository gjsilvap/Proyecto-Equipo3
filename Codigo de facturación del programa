    private void textcedulabusKeyTyped(java.awt.event.KeyEvent evt) {                                       
        char c = evt.getKeyChar();
        if (c<'0' || c>'9') evt.consume();
    }                                      

    private void textcedulabusFocusLost(java.awt.event.FocusEvent evt) {                                        
        if(this.textcedulabus.getText().equals("")){
            JOptionPane.showMessageDialog(new JFrame(),"Rellene el campo de identidad","Mensaje",JOptionPane.INFORMATION_MESSAGE);
        }
        else{
        Pattern p= Pattern.compile("[^0-9]");
        Matcher m=p.matcher(textcedulabus.getText());
        try{
         Conexion conec = new Conexion();
         conec.ConectarBDatos();
         conec.sql="Select clientes.* from clientes where cedula= '"+this.boxidentidad.getSelectedItem()+textcedulabus.getText()+"'";
         conec.tb=conec.stm.executeQuery(conec.sql);
         if(conec.tb.next()){
              this.nombrefac.setText(conec.tb.getString("nombre"));
              this.textapellidofac.setText(conec.tb.getString("apellido"));
              this.textotelefonofac.setText(conec.tb.getString("telf"));
              this.direccionfac.setText(conec.tb.getString("direccion"));
              
              this.textcedulabus.setEnabled(false);
              this.serviciofac.setEnabled(true);
              this.costofac.setEnabled(true);
              this.costotalfac.setEnabled(false);
              this.ivafac.setEnabled(false);
              this.serviciofac.setEnabled(true);
              
              conec.DesconectarBD();
         }
          else
           {
               int resp=JOptionPane.showConfirmDialog(this, "No existe el cliente, desea agregar?","Advertencia",0, JOptionPane.QUESTION_MESSAGE);
        if(resp==0){
            ModuloRegistro modulor = new ModuloRegistro();
            modulor.setVisible(true);
            modulor.setLocationRelativeTo(null);
            modulor.setSize(388,490);
        }
               this.textcedulabus.setEnabled(true);
                this.nombrefac.setEnabled(false);
                this.textotelefonofac.setEnabled(false);
                this.serviciofac.setEnabled(false);
                this.costofac.setEnabled(false);
                this.textapellidofac.setEnabled(false); 
                this.direccionfac.setEnabled(false);
                this.costotalfac.setEnabled(false);
                this.nombreprod.setEnabled(false);
                this.precioprod.setEnabled(false);
                this.cantprod.setEnabled(false);
                this.ivafac.setEnabled(false);
                this.fechafac.setEnabled(false);
           }
        }
        catch(Exception e2)
          {
              System.out.println("Error en JDBC");
        }        // TODO add your handling code here:
        }
    }                                       

