    private void cantprodFocusLost(java.awt.event.FocusEvent evt) {                                   
        if(this.precioprod.getText().equals("0") || this.precioprod.getText().equals("")){
            JOptionPane.showMessageDialog(new JFrame(),"Rellene el campo con un valor distinto de 0","Mensaje",JOptionPane.INFORMATION_MESSAGE);
        }
        else{
            Integer cantpro = Integer.parseInt(this.cantprod.getText());
        float mostrarcosto=Float.parseFloat(this.costofac.getText()) + (Float.parseFloat(this.precioprod.getText())*cantpro);
        float mostrariva=(Float.parseFloat(this.costofac.getText()) + (Float.parseFloat(this.precioprod.getText())*cantpro))*16/100;
        this.costotalfac.setText(Float.toString(mostrarcosto));
        this.ivafac.setText(Float.toString(mostrariva));
        }
    }                                  

