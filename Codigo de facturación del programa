    private void costofacKeyReleased(java.awt.event.KeyEvent evt) {                                     
        if(this.costofac.getText().equals("0") || this.costofac.getText().equals("")){
            JOptionPane.showMessageDialog(new JFrame(),"Rellene el campo con un valor distinto de 0","Mensaje",JOptionPane.INFORMATION_MESSAGE);
        }
        else{
        float mostrarcosto=Float.parseFloat(this.costofac.getText());
        float mostrariva= Float.parseFloat(this.costofac.getText())*16/100;
        this.costotalfac.setText(Float.toString(mostrarcosto));
        this.ivafac.setText(Float.toString(mostrariva));
        }
    }                                    

