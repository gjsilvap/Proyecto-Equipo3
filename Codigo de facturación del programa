    private void CrearFacturaMouseClicked(java.awt.event.MouseEvent evt) {                                          
        Pattern p= Pattern.compile("[^0-9]");
        Matcher m=p.matcher(textcedulabus.getText());
        if(m.find() || ((textcedulabus.getText().length()< 6) && (textcedulabus.getText().length()> 8)))
        { JOptionPane.showMessageDialog(new JFrame(),"La cedula debe ser mayor a 6 digitos y menor a 9 digitos","Alerta",JOptionPane.WARNING_MESSAGE);
        }
        else{
        try
        {
            if((this.textcedulabus.getText().equals("")) || (this.textotelefonofac.getText().equals("")) || (this.serviciofac.getText().equals(""))
                    || (this.costofac.getText().equals("")) || (this.direccionfac.getText().equals(""))){
                   JOptionPane.showMessageDialog(new JFrame(), "Rellene todos los campos", "Alerta", JOptionPane.WARNING_MESSAGE);
            }
            else{
                Conexion conec = new Conexion();
        conec.ConectarBDatos();
        DateFormat formatter = new SimpleDateFormat("yyyy/MM/dd");
        Date fecha = this.fechafac.getDate();
        String fechatexto = formatter.format(fecha);
        if (this.nombreprod.isEnabled() == false)
            {
                float costoserv = Float.parseFloat(this.costofac.getText());
                float iva= Float.parseFloat(this.costofac.getText())*16/100;
                conec.sql="INSERT INTO impuesto(costo_total, impuesto, fecha_imp) VALUES ('"+costoserv+"', '"+iva+"','"+fechatexto+"')";
                conec.stm.executeUpdate(conec.sql);
                conec.sql="INSERT INTO servicios(cedula_ser, servicio, costo_ser, fecha_ser, estado) VALUES ('"+this.boxidentidad.getSelectedItem()+this.textcedulabus.getText()+"','"+this.serviciofac.getText()+"','"+costoserv+"','"+fechatexto+"','"+this.boxestado.getSelectedItem()+"')";
                conec.stm.executeUpdate(conec.sql);
                JOptionPane.showMessageDialog(new JFrame(),"Factura registrada","Mensaje",JOptionPane.INFORMATION_MESSAGE);
                conec.DesconectarBD();
            }
        if (this.nombreprod.isEnabled() == true){
            Integer cant= Integer.parseInt(this.cantprod.getText());
            float costoprod = Float.parseFloat(this.precioprod.getText());
            float costoservprod= Float.parseFloat(this.costofac.getText()) + (Float.parseFloat(this.precioprod.getText())*cant);
            float costototalprod = (Float.parseFloat(this.precioprod.getText())*cant);
            float iva= (Float.parseFloat(this.costofac.getText()) + (Float.parseFloat(this.precioprod.getText())*cant))*16/100;
            conec.sql="SELECT inventario.* from inventario where codigo_inv='"+this.codigoprod.getText()+"'";
            conec.tb=conec.stm.executeQuery(conec.sql);
            if(conec.tb.next()){
            Integer cantprod = Integer.parseInt(conec.tb.getString("cant"));
            int cantnva = cantprod-cant;
            if(cantnva < 0){
                 JOptionPane.showMessageDialog(new JFrame(),"No es posible registrar. Inventario negativo,\nInventario actual del producto: "+cantprod,"Mensaje",JOptionPane.INFORMATION_MESSAGE);
            }
            else{
            conec.sql="INSERT INTO impuesto(costo_total, impuesto, fecha_imp) VALUES ('"+costoservprod+"','"+iva+"','"+fechatexto+"')";
            conec.stm.executeUpdate(conec.sql);
            conec.sql="INSERT INTO servicios (cedula_ser, servicio, costo_ser, fecha_ser, estado) VALUES ('"+this.textcedulabus.getText()+"','"+this.serviciofac.getText()+"','"+costoservprod+"','"+fechatexto+"','"+this.boxestado.getSelectedItem()+"')";
            conec.stm.executeUpdate(conec.sql);
            conec.sql="INSERT INTO ventas(cedula_ven, productoventa,cant_venta, costo_venta, costotal_ven, fecha_venta) VALUES ('"+this.boxidentidad.getSelectedItem()+this.textcedulabus.getText()+"','"+this.nombreprod.getText()+"','"+this.cantprod.getText()+"','"+costoprod+"','"+costototalprod+"','"+fechatexto+"')";
            conec.stm.executeUpdate(conec.sql);
            conec.sql="UPDATE inventario set cant='"+cantnva+"' where codigo_inv='"+this.codigoprod.getText()+"'";
            conec.stm.executeUpdate(conec.sql);
            JOptionPane.showMessageDialog(new JFrame(),"Factura registrada","Mensaje",JOptionPane.INFORMATION_MESSAGE);
            }
            }
        limpiar();
        this.textcedulabus.setEnabled(true);
        this.textcedulabus.requestFocus();
        conec.DesconectarBD();           
        }
            }
        }
        catch(Exception e2)
        {
        System.out.println("Error en incluir "+e2);
        }
        }
    }                                         

