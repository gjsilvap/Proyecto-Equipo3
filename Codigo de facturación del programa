    this.direccionfac.setText("");
    this.costotalfac.setText("");
    this.nombreprod.setText("");
    this.precioprod.setText("0.0");
    this.cantprod.setText("");
    this.ivafac.setText("");
    this.codigoprod.setText("");
    
    this.textcedulabus.setEnabled(true);
    this.nombrefac.setEnabled(false);
    this.textotelefonofac.setEnabled(false);
    this.serviciofac.setEnabled(false);
    this.costofac.setEnabled(false);
    this.textapellidofac.setEnabled(false); 
    this.direccionfac.setEnabled(false);
    this.costotalfac.setEnabled(false);
