        Connection Connect = null;
        try{
            Statement st = cn.createStatement();
            ResultSet rs= st.executeQuery(SQL);
           //Interfaz inte = new Interfaz();
           //inte.setVisible(true);
           //inte.setLocationRelativeTo(null);
        if(rs.next()){
            resultado=1;
        }
        
        }catch( SQLException e){
